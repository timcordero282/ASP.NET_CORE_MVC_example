@model Professor
@{
    string title = ViewBag.Action + " Professor";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="LastName">Last: </label>
        <input class="col-sm-10 form-control" asp-for="LastName" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="FirstName">First: </label>
        <input class="col-sm-10 form-control" asp-for="FirstName" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Building">Building: </label>
        <input class="col-sm-10 form-control" asp-for="Building" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="OfficeNumber">Office Number: </label>
        <input class="col-sm-10 form-control" asp-for="OfficeNumber" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="PhoneNumber">Phone: </label>
        <input class="col-sm-10 form-control" asp-for="PhoneNumber" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="EmailAddress">Email Address: </label>
        <input class="col-sm-10 form-control" asp-for="EmailAddress" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Department">Department: </label>
        <input class="col-sm-10 form-control" asp-for="Department" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Poistion">Position: </label>
        <input class="col-sm-10 form-control" asp-for="Poistion" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Discipline">Discipline: </label>
        <input class="col-sm-10 form-control" asp-for="Discipline" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Specialty">Specialty: </label>
        <input class="col-sm-10 form-control" asp-for="Specialty" />
    </div>

    <input type="hidden" asp-for="ProfessorID" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
